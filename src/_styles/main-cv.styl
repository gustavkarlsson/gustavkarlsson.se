@import 'home/base'

$content-max-width = 960px
$content-max-margin = 50px
$paper-max-width = $content-max-width + $content-max-margin * 2
$paper-vertical-margin = 100px
// Breakpoints
// This is where the two column layout starts
$breakpoint-medium = 750px
$breakpoint-small = 500px
// This is where the background appears
$breakpoint-full = $paper-max-width
breakpoint-small()
  @media print, screen and (min-width: $breakpoint-small)
    {block}
breakpoint-medium()
  @media print, screen and (min-width: $breakpoint-medium)
    {block}
breakpoint-full()
  @media screen and (min-width: $breakpoint-full)
    {block}
body
  background-color: $whiteish
  font-family: $open-sans
  overflow-x: hidden
  +breakpoint-full()
    background-color: $blackish
a
  color: inherit
  text-decoration: none
  &:hover, &:focus
    text-decoration: underline
p
  margin-bottom: 20px
  font-size: 13px
  line-height: 21px
h1
  font-weight: 300
#paper
  background-color: $whiteish
  width: 100%
  margin-left: auto
  margin-right: auto
  +breakpoint-full()
    width: $paper-max-width
    margin-top: $paper-vertical-margin
    margin-bottom: $paper-vertical-margin
#content
  clearfix()
  width: 90%
  margin-left: auto
  margin-right: auto
header, section
  float: left
  width: 100%
  page-break-inside: avoid
header
  margin-top: 25px
  margin-bottom: 50px
  +breakpoint-small()
    position: relative
    min-height: 280px
    margin-top: 45px
    margin-bottom: 45px
  +breakpoint-medium()
    min-height: 210px
    margin-top: 70px
    margin-bottom: 70px
section
  padding-top: 35px
  padding-bottom: 35px
  border-top-style: solid
  border-top-width: 1px
  border-top-color: $light-gray
  h1
    margin-bottom: 30px
    font-size: 24px
    color: $gray
    +breakpoint-medium()
      margin-bottom: 50px
      float: left
      width: 29%
  h2
    margin-bottom: 5px
    font-size: 18px
    font-weight: 700
    color: $blackish
  h3
    margin-bottom: 20px
    font-size: 16px
    font-weight: 300
    color: $blackish
  .section-content
    +breakpoint-medium()
      width: 69%
      float: right
  .context
    text-align: right
    margin-bottom: 10px
    padding-top: 8px
    padding-bottom: 8px
    padding-left: 15px
    padding-right: 15px
    background-color: $green
    color: $whiteish
    text-transform: uppercase
    +breakpoint-medium()
      margin-left: 10px
      float: right
#contact
  font-size: 13px
  line-height: 18px
  margin-bottom: 25px
  +breakpoint-small()
    position: absolute
    top: 0
    right: 0
    text-align: right
#photo
  height: 200px
  width: auto
  margin-left: 1px
  // outline
  margin-bottom: 15px
  border-style: solid
  border-width: 5px
  border-color: white
  outline-style: solid
  outline-width: 1px
  outline-color: $light-gray
  +breakpoint-small()
    position: absolute
    top: 0
    left: 0
#name-profession
  +breakpoint-small()
    position: absolute
    bottom: 0
    left: 0
  +breakpoint-medium()
    left: 240px
#name
  font-size: 36px
  +breakpoint-medium()
    font-size: 48px
#profession
  color: $green
  margin: 0
  font-size: 20px
  font-weight: 300
  text-transform: uppercase
  +breakpoint-medium()
    font-size: 24px
