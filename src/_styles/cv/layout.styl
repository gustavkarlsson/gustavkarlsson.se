@require '../base'
@require 'breakpoints'

$paper-vertical-margin = 100px

body
  overflow-x: hidden
p, ul, ol
  margin-bottom: 25px
#paper
  width: 100%
  @extend .center
  +full-breakpoint()
    width: $paper-max-width
    margin-top: $paper-vertical-margin
    margin-bottom: $paper-vertical-margin
#content
  clearfix()
  width: 90%
  @extend .center
header, section
  float: left
  width: 100%
  page-break-inside: avoid
header
  margin-top: 25px
  margin-bottom: 50px
  +small-breakpoint()
    position: relative
    min-height: 280px
    margin-top: 45px
    margin-bottom: 45px
  +medium-breakpoint()
    min-height: 210px
    margin-top: 70px
    margin-bottom: 70px
section
  padding-top: 25px
  padding-bottom: 25px
  border-top-style: solid
  border-top-width: 1px
  h1
    margin-bottom: 15px
    +medium-breakpoint()
      margin-bottom: 50px
      float: left
      width: 29%
  h3
    margin-bottom: 10px
  .section-content
    +medium-breakpoint()
      width: 69%
      float: right
  time
    margin-bottom: 0
    +medium-breakpoint()
      margin-left: 10px
      float: right
#contact
  margin-bottom: 25px
  +small-breakpoint()
    position: absolute
    top: 0
    right: 0
    text-align: right
#photo
  height: 200px
  width: auto
  margin-left: 1px
  // outline
  margin-bottom: 15px
  border-style: solid
  border-width: 5px
  outline-style: solid
  outline-width: 1px
  +small-breakpoint()
    position: absolute
    top: 0
    left: 0
#name-profession
  +small-breakpoint()
    position: absolute
    bottom: 0
    left: 0
  +medium-breakpoint()
    left: 240px
#profession
  margin: 0
